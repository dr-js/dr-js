{
  "private": true,
  "name": "dr-js",
  "version": "0.11.1-dev.2",
  "author": "dr-js",
  "license": "MIT",
  "description": "A collection of strange functions",
  "keywords": [
    "Dr",
    "Dr-js",
    "JavaScript"
  ],
  "homepage": "https://github.com/dr-js/dr-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dr-js/dr-js.git"
  },
  "bugs": {
    "url": "https://github.com/dr-js/dr-js/issues"
  },
  "bin": "bin/index.js",
  "scripts": {
    "// script ======================": "",
    "script-base": "cross-env BABEL_ENV=test babel-node ./script",
    "script-pack": "cross-env BABEL_ENV=test babel-node ./script pack",
    "script-test": "cross-env BABEL_ENV=test babel-node ./script pack test",
    "script-publish": "cross-env BABEL_ENV=test babel-node ./script pack publish",
    "script-publish-dev": "cross-env BABEL_ENV=test babel-node ./script pack publish-dev",
    "// build-dev ===================": "",
    "build-bin-dev": "cross-env NODE_ENV=development BABEL_ENV=library-dev babel ./source-bin --out-dir ./output-gitignore/bin --ignore test.js --copy-files --watch",
    "build-library-babel-dev": "cross-env NODE_ENV=development BABEL_ENV=library-dev babel ./source --out-dir ./output-gitignore/library --ignore test.js,browser/**,Dr.browser.js --watch",
    "build-library-webpack-dev": "cross-env NODE_ENV=development webpack --config .webpackrc.js --watch",
    "// build =======================": "",
    "build-bin": "cross-env NODE_ENV=production BABEL_ENV=library babel ./source-bin --out-dir ./output-gitignore/bin --copy-files",
    "build-module": "cross-env NODE_ENV=production BABEL_ENV=module babel ./source --out-dir ./output-gitignore/module",
    "build-library-babel": "cross-env NODE_ENV=production BABEL_ENV=library babel ./source --out-dir ./output-gitignore/library --ignore browser/**,Dr.browser.js",
    "build-library-webpack": "cross-env NODE_ENV=production webpack --config .webpackrc.js",
    "// test ========================": "",
    "test-mocha-common": "cross-env BABEL_ENV=test mocha --require babel-register \"source/common/**/*.test.js\"",
    "test-mocha-node": "cross-env BABEL_ENV=test mocha --require babel-register \"source/node/**/*.test.js\"",
    "test-mocha-browser": "cross-env BABEL_ENV=test mocha --require babel-register \"source/browser/**/*.test.js\"",
    "// =============================": "",
    "prepack": "echo \"Error: should run pack with script-*\" && exit 1"
  },
  "engines": {
    "node": ">=8.8.0",
    "npm": ">=5.5.0"
  },
  "devDependencies": {
    "dev-dep-tool": "^0.0.14-dev.2",
    "dev-dep-web": "^0.0.14-dev.2",
    "dr-js": "^0.11.1-dev.1"
  }
}
