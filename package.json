{
  "name": "dr-js",
  "version": "0.10.1-dev.0",
  "author": "dr-js",
  "license": "MIT",
  "description": "A collection of strange functions",
  "keywords": [
    "Dr",
    "Dr-js",
    "JavaScript"
  ],
  "homepage": "https://github.com/dr-js/dr-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dr-js/dr-js.git"
  },
  "bugs": {
    "url": "https://github.com/dr-js/dr-js/issues"
  },
  "bin": "bin/index.js",
  "main": "library/Dr.js",
  "scripts": {
    "build": "npm run build-clear && npm run build-library && npm run build-bin && npm run build-module",
    "build-clear": "dr-js -m rm -a ./output-gitignore",
    "build-library": "npm run build-library-babel && npm run build-library-webpack",
    "build-library-babel": "cross-env NODE_ENV=production BABEL_ENV=library babel ./source --out-dir ./output-gitignore/library --ignore test.js,browser/**,Dr.browser.js",
    "build-library-babel-dev": "cross-env NODE_ENV=development BABEL_ENV=library-dev babel ./source --out-dir ./output-gitignore/library --ignore test.js,browser/**,Dr.browser.js --watch",
    "build-library-webpack": "cross-env NODE_ENV=production webpack --config .webpackrc.js",
    "build-library-webpack-dev": "cross-env NODE_ENV=development webpack --config .webpackrc.js --watch",
    "build-bin": "cross-env NODE_ENV=production BABEL_ENV=library babel ./bin --out-dir ./output-gitignore/bin --ignore test.js",
    "build-bin-dev": "cross-env NODE_ENV=development BABEL_ENV=library-dev babel ./bin --out-dir ./output-gitignore/bin --ignore test.js --watch",
    "build-module": "cross-env NODE_ENV=production BABEL_ENV=module babel ./source --out-dir ./output-gitignore/module --ignore test.js",
    "test": "npm run test-mocha",
    "test-mocha": "cross-env BABEL_ENV=test mocha --require babel-register \"source/**/*.test.js\"",
    "test-mocha-common": "cross-env BABEL_ENV=test mocha --require babel-register \"source/common/**/*.test.js\"",
    "test-mocha-node": "cross-env BABEL_ENV=test mocha --require babel-register \"source/node/**/*.test.js\"",
    "test-mocha-browser": "cross-env BABEL_ENV=test mocha --require babel-register \"source/browser/**/*.test.js\"",
    "start": "npm run build-library-dev",
    "repack-publish": "node script/repack.js publish",
    "repack-publish-dev": "node script/repack.js publish-dev",
    "repack-pack-only": "node script/repack.js pack-only",
    "prepack": "echo \"Error: should pack with repack-*\" && exit 1"
  },
  "engines": {
    "node": ">=8.8.0",
    "npm": ">=5.5.0"
  },
  "devDependencies": {
    "dev-dep-web": "^0.0.11",
    "dr-js": "^0.10.0-dev.1"
  }
}
