{
  "name": "dr-js",
  "version": "0.1.1",
  "author": "dr-js",
  "license": "MIT",
  "description": "A collection of strange functions",
  "keywords": [
    "Dr",
    "Dr-js",
    "JavaScript"
  ],
  "homepage": "https://github.com/dr-js/dr-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dr-js/dr-js.git"
  },
  "bugs": {
    "url": "https://github.com/dr-js/dr-js/issues"
  },
  "main": "library/Dr.js",
  "scripts": {
    "example": "cross-env NODE_ENV=production webpack --config config/example.conf.js",
    "example-dev": "cross-env NODE_ENV=development webpack --watch --config config/example.conf.js",
    "library": "cross-env NODE_ENV=production webpack --config config/library.conf.js",
    "library-dev": "cross-env NODE_ENV=development webpack --watch --config config/library.conf.js",
    "perf-webpack-stats": "cross-env NODE_ENV=production webpack --config config/library.conf.js --json > stats.json",
    "perf-webpack-profile": "cross-env NODE_ENV=production webpack --config config/library.conf.js --profile",
    "perf-node-example-server": "cross-env NODE_ENV=production node --prof example/node/example-server.js",
    "test": "npm run test-mocha",
    "test-mocha": "mocha --compilers js:babel-register \"source/**/*.test.js\"",
    "test-mocha-common": "mocha --compilers js:babel-register \"source/common/**/*.test.js\"",
    "test-mocha-node": "mocha --compilers js:babel-register \"source/node/**/*.test.js\"",
    "test-mocha-browser": "mocha --compilers js:babel-register \"source/browser/**/*.test.js\"",
    "prepare": "npm run build",
    "build": "npm run library",
    "start": "npm run example-dev"
  },
  "engines": {
    "node": "8.x",
    "npm": "5.x"
  },
  "devDependencies": {
    "dev-dep-web": "^0.0.1"
  }
}
