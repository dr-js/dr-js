{
  "name": "dr-js",
  "version": "0.6.0-dev.5",
  "author": "dr-js",
  "license": "MIT",
  "description": "A collection of strange functions",
  "keywords": [
    "Dr",
    "Dr-js",
    "JavaScript"
  ],
  "homepage": "https://github.com/dr-js/dr-js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dr-js/dr-js.git"
  },
  "bugs": {
    "url": "https://github.com/dr-js/dr-js/issues"
  },
  "bin": "bin/index.js",
  "main": "library/Dr.js",
  "scripts": {
    "example": "cross-env NODE_ENV=production webpack --config config/example.conf.js",
    "example-dev": "cross-env NODE_ENV=development webpack --watch --config config/example.conf.js",
    "library": "cross-env NODE_ENV=production webpack --config config/library.conf.js",
    "library-dev": "cross-env NODE_ENV=development webpack --watch --config config/library.conf.js",
    "module": "cross-env NODE_ENV=production BABEL_ENV=module babel ./source --out-dir ./module --ignore test.js",
    "module-dev": "cross-env NODE_ENV=development BABEL_ENV=module babel ./source --out-dir ./module --ignore test.js",
    "perf-webpack-stats": "cross-env NODE_ENV=production webpack --config config/library.conf.js --json > stats.json",
    "perf-webpack-profile": "cross-env NODE_ENV=production webpack --config config/library.conf.js --profile",
    "perf-node-example-server": "cross-env NODE_ENV=production node --prof example/node/example-server.js",
    "test": "npm run test-mocha",
    "test-mocha": "cross-env BABEL_ENV=test mocha --require babel-register \"source/**/*.test.js\"",
    "test-mocha-common": "cross-env BABEL_ENV=test mocha --require babel-register \"source/common/**/*.test.js\"",
    "test-mocha-node": "cross-env BABEL_ENV=test mocha --require babel-register \"source/node/**/*.test.js\"",
    "test-mocha-browser": "cross-env BABEL_ENV=test mocha --require babel-register \"source/browser/**/*.test.js\"",
    "build": "npm run build-clear && npm run library && npm run module",
    "build-clear": "node bin/index.js --mode file-modify-delete --argument library module",
    "start": "npm run example-dev",
    "prepack": "npm run test && npm run build",
    "publish-dev": "npm publish --tag dev"
  },
  "engines": {
    "node": ">=8.8.0",
    "npm": ">=5.5.0"
  },
  "devDependencies": {
    "dev-dep-web": "^0.0.7"
  }
}
